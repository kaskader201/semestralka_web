<!DOCTYPE html>
<html lang="cs">
<head>
    <base href="{$baseURL}">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{$title}</title>

    <link rel="stylesheet" href="{$baseURL}css/bootstrap.min.css">
    <link rel="stylesheet" href="{$baseURL}css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="{$baseURL}css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="{$baseURL}css/custom.css?version=0.9">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    {foreach $additionalyCSS as $item}
        <link rel="stylesheet" href="{$baseURL}css/{$item}">
    {/foreach}


</head>

<body>
<div class="container-fluid flex-column no-gutters fill">
    <div class="row col fill no-gutters">
        <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2 bg-dark">
            <nav class="nav navbar-dark navbar-expand-lg navbar">

                <!-- Button for toggling the visibility of the menu -->
                <button type="button" data-target="#collapseNavbar" data-toggle="collapse" class="navbar-toggler">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navigation menu container -->
                <div class="navbar-collapse collapse" id="collapseNavbar">

                    {$menu|noescape}
                    <!--  <ul class="nav flex-column">
                          <li class="nav-item"><a href="index" class="nav-link navbar-brand active"></li>
                          <li class="nav-item"><a href="users" class="nav-link">Uživatelé</a></li>
                          <li class="nav-item"><a href="chyba-404" class="nav-link">Chyba</a></li>
                          <li class="nav-item"><a href="" class="nav-link">Linnk</a></li>
                      </ul>-->
                </div>

            </nav>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
            <main class="ml-3 mr-3 pt-3 pb-3">
                {if FlashMessage::exist()}
                    <div n:foreach="FlashMessage::get() as $message" class="card text-white bg-{$message->type} mb-1">
                        <div class="card-block ml-3 pt-3 pb-3">
                            <h4>{$message->header}</h4>
                            <blockquote class="card-blockquote">{$message->text}</blockquote>
                        </div>
                    </div>

                {/if}
                {include $block}
            </main>
        </div>
    </div>

</div>

<!-- SCRIPTS -->
<script src="{$baseURL}js/jquery-3.3.1.min.js"></script>
<script src="{$baseURL}js/bootstrap.min.js"></script>
<script src="{$baseURL}js/bootstrap.bundle.min.js"></script>

<!--[if lt IE 9]>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>window.jQuery || document.write('<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"><\/script>')</script>
<![endif]-->
<script src="{$baseURL}js/maskedinput.js"></script>
<script src="{$baseURL}js/jquery-confirm.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
{foreach $additionalyJs as $item}
    <script src="{$baseURL}js/{$item}"></script>
{/foreach}

<script>
    $("#tel").mask("(+420) 999 999 999");
</script>
</body>
</html>
