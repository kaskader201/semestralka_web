{if empty($users)}
    <h1>Nenalezen žádný uživatel</h1>
{else}
    <h1>Seznam uživatelů</h1>
    <div class="pb-2">
        <a href="/users/new" class="btn btn-success">Vytvoření nového uživatele</a>

    </div>
     <div class="table-responsive">
        <table class="table table-striped" id="dataTable">
            <thead>
            <tr>
                <th>ID</th>
                <th>Jmeno</th>
                <th>Prijmeni</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Práva</th>
                <th class="text-right">Operace</th>
            </tr>
            </thead>
            <tbody>
            {foreach $users as $user}
                <tr>
                    <td>{$user->id}</td>
                    <td>{$user->firstname}</td>
                    <td>{$user->lastname}</td>
                    <td>{$user->email}</td>
                    <td>{$user->tel}</td>
                    <td>{Permissions::translatePermission($user->permission)}</td>
                    <td class="text-right">

                        <form action="/users/delete" method="post">
                            <a href="/users/edit/{$user->id}" class="btn btn-warning rounded-0 text-white"><i class="fa fa-pencil" aria-hidden="true"></i> EDITOVAT</a>
                            <input type="hidden" name="id" value="{$user->id}">
                            <button type="submit" data-id="{$user->id}" data-name="{$user}"
                                    class="btn btn-danger rounded-0 text-white deleteUser"><i class="fa fa-trash-o"
                                                                                              aria-hidden="true"></i>
                                SMAZAT
                            </button>
                        </form>
                    </td>

                </tr>
            {/foreach}
            </tbody>
        </table>
    </div>
{/if}