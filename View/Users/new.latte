<h1>Vytvoření uživatele</h1>
<form action="/users/save/new"  method="post">
    <div class="form-group row">
        <label for="firstname" class="col-2 col-form-label">Jméno: </label>
        <div class="col-4">
            <input class="form-control" type="text" minlength="2" maxlength="25" name="firstname" id="firstname" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="lastname" class="col-2 col-form-label">Příjmení: </label>
        <div class="col-4">
            <input class="form-control" type="text" minlength="2" maxlength="25" name="lastname" id="lastname" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-2 col-form-label">Email: </label>
        <div class="col-4">
            <input class="form-control" type="email" minlength="5" maxlength="255" name="email" id="email" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="permission" class="col-2 col-form-label">Práva: </label>
        <div class="col-4">
            <select n:if="$permissions" name="permission" id="permission" class="form-control">
                <option n:foreach="$permissions as $permission"
                        value="{$permission["id"]}">{Permissions::translatePermission($permission["id"])}</option>
            </select>

        </div>
    </div>
    <div class="form-group row">
        <label for="permission" class="col-2 col-form-label checkbox-inline">Aktivní účet:
        </label>
        <div class="col-4">
            <input type="checkbox" id="toggle-event" value="1" name="active" data-toggle="toggle" data-on="Ano"
                   data-off="Ne" checked>
        </div>
    </div>
    <input type="hidden" name="{$CSRF_input_name}" value="{$CSRF_token}">
    <button type="submit" class="btn btn-success rounded-0">Uložit</button>
</form>